<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dev.calendarapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalendarApp">

        <activity android:name=".Edit" />
        <activity android:name=".AddNoteActivity" />

        <activity
            android:name=".Detail"
            android:parentActivityName=".NotesActivity"
            android:theme="@style/Theme.CalendarApp">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NotesActivity" />
        </activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".OptionActivity" />
        <activity android:name=".NotesActivity" />
    </application>

</manifest>